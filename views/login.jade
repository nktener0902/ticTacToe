doctype html
html
  head
    meta(charset="UTF-8")
    title Login
    link(rel='stylesheet', href='/css/bootstrap.css', media='screen', charset='utf-8')
    link(rel='stylesheet', href='/stylesheets/login.css', media='screen', charset='utf-8')
  body
    div.container
      div.row
        div.col-md-6.col-md-offset-3
          ul.tab
            li
              a#defaultOpen(href="javascript:void(0)", class="tablinks", onclick="openTab(event, 'Login')") Login
            li
              a(href="javascript:void(0)", class="tablinks", onclick="openTab(event, 'Register')") Register
          div#Login.tabcontent
            h2 Log in
            form(action="/login", method="GET")
              div.form-group
                input#loginform(type="text", name="email", placeholder="Email")
              div.form-group
                input#loginform(type="password", name="password", placeholder="Password")
              div.form-group
                button.btn.btn-success(type="submit") Log in
          div#Register.tabcontent
            h2 Register
            form(action="/add", method="POST")
              div.form-group
                input#loginform(type="text", name="email", placeholder="Email")
              div.form-group
                input#loginform(type="password", name="password", placeholder="Password")
              div.form-group
                button.btn.btn-success(type="submit") Create Account
    script(type="text/javascript", src="/javascripts/logintab.js")
